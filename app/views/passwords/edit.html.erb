<%= form_for @reset_password, url: user_password_path, method: :put do |f|%>
    <div class="form-group">
      <%= f.password_field 'password', class: 'input-lg form-control',
                           placeholder: 'Password' %>
    </div >
    <div class="form-group">
      <%= f.password_field 'password_confirmation',
                           class: 'input-lg form-control',
                           placeholder: 'Password Confirmation' %>
    </div >

    <% if @reset_password.errors.any? %>
        <%= render partial: 'errors', locals: { errors: @reset_password.errors.full_messages } %>
    <% end %>

    <%= f.submit 'Change Password', class: 'col-xs-12 btn btn-primary btn-load btn-lg' %>
<% end %>
